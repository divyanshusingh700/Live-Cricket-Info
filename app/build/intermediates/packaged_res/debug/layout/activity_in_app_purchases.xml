<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/v_back"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginTop="10dp"
                android:src="@mipmap/ic_launcher_foreground"/>
            <TextView
                android:textSize="25dp"
                android:textColor="#ffffff"
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Remove Ads"
                app:fontFamily="@font/doppio_one"/>
            <TextView android:textSize="20sp"
                android:textColor="#ffffff"
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Use Ads free version for lifetime"
                app:fontFamily="sans-serif-medium"/>
            <TextView
                android:textSize="25sp"
                android:textColor="#ffffff"
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="180dp"
                android:text="$1.99"
                app:fontFamily="@font/days_one"/>
            <TextView
                android:textSize="25sp"
                android:textColor="#ffffff"
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="for Lifetime"
                app:fontFamily="@font/days_one"/>
            <Button
                android:textSize="18sp"
                android:layout_gravity="center_horizontal"
                android:id="@+id/subscribeButton"
                android:background="@drawable/round_button"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_marginTop="40dp"
                android:text="Subscribe"
                android:fontFamily="@font/doppio_one"/>
            <TextView
                android:textSize="20sp"
                android:textColor="#ffffff"
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="When you subscribe, please close the app and reopen"
                app:fontFamily="sans-serif-medium"/>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>