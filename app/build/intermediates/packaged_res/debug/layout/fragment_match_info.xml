<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:background="@color/white" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent">
        <androidx.constraintlayout.widget.ConstraintLayout android:id="@+id/mainScorecardCardView" android:layout_width="match_parent" android:layout_height="wrap_content">
            <soup.neumorphism.NeumorphCardView android:id="@+id/imageCardView" android:padding="15sp" android:layout_width="80dp" android:layout_height="80dp" app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent">
                <de.hdodenhof.circleimageview.CircleImageView android:id="@+id/firstTeamImageViewId" android:layout_width="match_parent" android:layout_height="match_parent" android:src="@drawable/sri_flag"/>
            </soup.neumorphism.NeumorphCardView>
            <soup.neumorphism.NeumorphCardView android:padding="15sp" android:layout_width="80dp" android:layout_height="80dp" app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent">
                <de.hdodenhof.circleimageview.CircleImageView android:id="@+id/secondImageViewId" android:layout_width="match_parent" android:layout_height="match_parent" android:src="@drawable/sri_flag"/>
            </soup.neumorphism.NeumorphCardView>
            <TextView android:textColor="@color/white" android:gravity="center" android:id="@+id/firstTeamNameId" android:background="@drawable/textview_shape" android:paddingLeft="20sp" android:paddingTop="10sp" android:paddingRight="20sp" android:paddingBottom="10sp" android:layout_width="140dp" android:layout_height="wrap_content" android:layout_marginTop="4dp" android:text="Bangladesh" android:fontFamily="@font/days_one" app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toBottomOf="@+id/imageCardView"/>
            <TextView android:textColor="@color/white" android:gravity="center" android:id="@+id/secondTeamNameId" android:background="@drawable/textview_leftradius" android:paddingLeft="20sp" android:paddingTop="10sp" android:paddingRight="20sp" android:paddingBottom="10sp" android:layout_width="140dp" android:layout_height="wrap_content" android:layout_marginTop="4dp" android:text="India" android:fontFamily="@font/days_one" app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toBottomOf="@+id/imageCardView"/>
            <TextView android:textSize="18sp" android:textStyle="bold" android:id="@+id/textView5" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="v/s" app:layout_constraintBottom_toBottomOf="@+id/firstTeamNameId" app:layout_constraintEnd_toStartOf="@+id/secondTeamNameId" app:layout_constraintStart_toEndOf="@+id/firstTeamNameId" app:layout_constraintTop_toTopOf="@+id/imageCardView"/>
            <TextView android:textSize="18sp" android:gravity="center" android:id="@+id/dateTextViewId" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginTop="16dp" android:layout_marginBottom="8dp" android:text="India won by 88 runs" android:fontFamily="@font/days_one" android:layout_marginStart="8dp" android:layout_marginEnd="8dp" app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toBottomOf="@+id/firstScore"/>
            <TextView android:textAppearance="@style/TextAppearance.AppCompat.Medium" android:id="@+id/firstScore" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="16dp" android:text="188/7 (20)" android:fontFamily="@font/days_one" app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toBottomOf="@+id/firstTeamNameId"/>
            <TextView android:id="@+id/secondScore" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="16dp" android:text="100 (15.4)" android:fontFamily="@font/days_one" android:layout_marginEnd="16dp" app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toBottomOf="@+id/secondTeamNameId"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <View android:id="@+id/view" android:background="#ffffff" android:layout_width="match_parent" android:layout_height="3dp" android:layout_below="@+id/mainScorecardCardView"/>
        <RelativeLayout android:id="@+id/manOfTheMatchMainLayout" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:layout_below="@+id/view">
            <androidx.recyclerview.widget.RecyclerView android:id="@+id/manOfTheMatchRecyclerView" android:layout_width="match_parent" android:layout_height="wrap_content"/>
            <ProgressBar android:id="@+id/manOfTheMatchProgressBar" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_centerInParent="true"/>
        </RelativeLayout>
        <androidx.cardview.widget.CardView android:id="@+id/matchInfoLayout" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/manOfTheMatchMainLayout" app:cardBackgroundColor="@color/background_color">
            <LinearLayout android:orientation="vertical" android:paddingTop="10sp" android:paddingBottom="10sp" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginLeft="5dp" android:layout_marginTop="5dp" android:layout_marginRight="5dp">
                <TextView android:textAppearance="@style/TextAppearance.AppCompat.Medium" android:gravity="center" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Match Info" android:fontFamily="@font/days_one"/>
                <LinearLayout android:orientation="horizontal" android:id="@+id/matchTitleLayout" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10sp">
                    <TextView android:textSize="16sp" android:textStyle="bold" android:id="@+id/matchTitleHead" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="10sp" android:text="Match: "/>
                    <TextView android:gravity="center" android:id="@+id/matchTitleText" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="WI vs IND, 5th T20I, India tour of West Indies, 2022"/>
                </LinearLayout>
                <LinearLayout android:orientation="horizontal" android:id="@+id/matchDateLayout" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10sp">
                    <TextView android:textSize="16sp" android:textStyle="bold" android:id="@+id/matchDateHead" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="10sp" android:text="Date: "/>
                    <TextView android:gravity="center" android:id="@+id/matchDateText" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Sunday, August 07, 2022"/>
                </LinearLayout>
                <LinearLayout android:orientation="horizontal" android:id="@+id/matchTossLayout" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10sp">
                    <TextView android:textSize="16sp" android:textStyle="bold" android:id="@+id/matchTossHead" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="10sp" android:text="Toss: "/>
                    <TextView android:gravity="center" android:id="@+id/matchTossText" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="India won the toss and opt to bat"/>
                </LinearLayout>
                <LinearLayout android:orientation="horizontal" android:id="@+id/matchTimeLayout" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10sp">
                    <TextView android:textSize="16sp" android:textStyle="bold" android:id="@+id/matchTimeHead" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="10sp" android:text="Time: "/>
                    <TextView android:gravity="center" android:id="@+id/matchTimeText" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="8:30 PM"/>
                </LinearLayout>
                <LinearLayout android:orientation="horizontal" android:id="@+id/matchUmpireLayout" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10sp">
                    <TextView android:textSize="16sp" android:textStyle="bold" android:id="@+id/matchUmpiresHead" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="10sp" android:text="Umpires: "/>
                    <TextView android:gravity="center" android:id="@+id/matchUmpiresText" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Gregory Brathwaite, Leslie Reifer"/>
                </LinearLayout>
                <LinearLayout android:orientation="horizontal" android:id="@+id/matchThirdUmpireLayout" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10sp">
                    <TextView android:textSize="16sp" android:textStyle="bold" android:id="@+id/matchThirdUmpireHead" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="10sp" android:text="Third Umpire: "/>
                    <TextView android:gravity="center" android:id="@+id/matchThirdUmpireText" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Patrick Gustard"/>
                </LinearLayout>
                <LinearLayout android:orientation="horizontal" android:id="@+id/matchRefereeLayout" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10sp">
                    <TextView android:textSize="16sp" android:textStyle="bold" android:id="@+id/matchRefereeHead" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="10sp" android:text="Match Referee: "/>
                    <TextView android:gravity="center" android:id="@+id/matchRefereeText" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Richie Richardson"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView android:id="@+id/venueInfoLayout" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10sp" android:layout_below="@+id/matchInfoLayout" app:cardBackgroundColor="@color/background_color">
            <LinearLayout android:orientation="vertical" android:paddingTop="10sp" android:paddingBottom="10sp" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginLeft="5dp" android:layout_marginTop="5dp" android:layout_marginRight="5dp">
                <TextView android:textAppearance="@style/TextAppearance.AppCompat.Medium" android:gravity="center" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Venue Info" android:fontFamily="@font/days_one"/>
                <LinearLayout android:orientation="horizontal" android:id="@+id/matchStadiumLayout" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10sp" android:layout_weight="2">
                    <TextView android:textSize="16sp" android:textStyle="bold" android:id="@+id/matchStadiumHead" android:layout_width="0dp" android:layout_height="wrap_content" android:text="Stadium: " android:layout_weight="0.5"/>
                    <TextView android:gravity="center" android:id="@+id/matchStadiumText" android:layout_width="0dp" android:layout_height="wrap_content" android:text="Central Broward Regional Park Stadium Turf Ground" android:layout_weight="1.5"/>
                </LinearLayout>
                <LinearLayout android:orientation="horizontal" android:id="@+id/matchCityLayout" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10sp" android:layout_weight="2">
                    <TextView android:textSize="16sp" android:textStyle="bold" android:id="@+id/matchCityHead" android:layout_width="0dp" android:layout_height="wrap_content" android:text="City: " android:layout_weight="0.5"/>
                    <TextView android:gravity="center" android:id="@+id/matchCityText" android:layout_width="0dp" android:layout_height="wrap_content" android:text="Lauderhill, Florida" android:layout_weight="1.5"/>
                </LinearLayout>
                <LinearLayout android:orientation="horizontal" android:id="@+id/matchCapacityLayout" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10sp" android:layout_weight="2">
                    <TextView android:textSize="16sp" android:textStyle="bold" android:id="@+id/matchCapacityHead" android:layout_width="0dp" android:layout_height="wrap_content" android:text="Capacity: " android:layout_weight="0.5"/>
                    <TextView android:gravity="center" android:id="@+id/matchCapacityText" android:layout_width="0dp" android:layout_height="wrap_content" android:text="20000" android:layout_weight="1.5"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>
</ScrollView>