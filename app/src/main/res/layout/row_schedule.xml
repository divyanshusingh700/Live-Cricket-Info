<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:background="@color/background_color" android:layout_width="match_parent" android:layout_height="wrap_content">
    <soup.neumorphism.NeumorphCardView android:layout_width="match_parent"
        android:layout_height="wrap_content" app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
            android:layout_height="match_parent">
            <soup.neumorphism.NeumorphCardView
                android:id="@+id/imageCardView"
                android:padding="15sp"
                android:layout_width="80dp" android:layout_height="80dp"
                android:layout_marginTop="8dp" app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toBottomOf="@+id/view">
                <ProgressBar android:id="@+id/firstProgressBar"
                    android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent"/>
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/firstTeamImageViewId"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:src="@drawable/nothing"/>
            </soup.neumorphism.NeumorphCardView>
            <soup.neumorphism.NeumorphCardView android:padding="15sp"
                android:layout_width="80dp"
                android:layout_height="80dp" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/imageCardView">
                <de.hdodenhof.circleimageview.CircleImageView android:id="@+id/secondImageViewId"
                    android:layout_width="match_parent" android:layout_height="match_parent"
                    android:src="@drawable/nothing"/>
                <ProgressBar android:id="@+id/secondProgressBar" android:visibility="gone"
                    android:layout_width="match_parent" android:layout_height="match_parent"/>
            </soup.neumorphism.NeumorphCardView>
            <TextView android:textColor="@color/white" android:gravity="center"
                android:id="@+id/firstTeamNameId"
                android:background="@drawable/textview_shape" android:paddingLeft="20sp"
                android:paddingTop="10sp" android:paddingRight="20sp" android:paddingBottom="10sp" android:layout_width="140dp" android:layout_height="wrap_content" android:layout_marginTop="8dp" android:text="Bangladesh" android:fontFamily="@font/days_one" app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toBottomOf="@+id/imageCardView"/>
            <TextView
                android:textColor="@color/white"
                android:gravity="center" android:id="@+id/secondTeamNameId"
                android:background="@drawable/textview_leftradius"
                android:paddingLeft="20sp"
                android:paddingTop="10sp" android:paddingRight="20sp"
                android:paddingBottom="10sp" android:layout_width="140dp" android:layout_height="wrap_content" android:layout_marginTop="8dp" android:text="India" android:fontFamily="@font/days_one" app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toBottomOf="@+id/imageCardView"/>
            <TextView android:textSize="18sp" android:textStyle="bold"
                android:id="@+id/textView5"
                android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="v/s" app:layout_constraintBottom_toBottomOf="@+id/firstTeamNameId" app:layout_constraintEnd_toStartOf="@+id/secondTeamNameId" app:layout_constraintStart_toEndOf="@+id/firstTeamNameId" app:layout_constraintTop_toTopOf="@+id/imageCardView"/>
            <TextView
                android:textSize="18sp"
                android:gravity="center"
                android:id="@+id/dateTextViewId"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="16dp"
                android:text="Feb 25, Tue"
                android:fontFamily="@font/days_one"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/secondTeamNameId"/>
            <TextView
                android:textSize="16sp"
                android:id="@+id/textView7"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Asia cup"
                android:fontFamily="@font/doppio_one"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toStartOf="@+id/matchNoId"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                android:id="@+id/matchNoId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="1st Match"
                android:fontFamily="@font/doppio_one"
                android:layout_marginEnd="16dp" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <View android:id="@+id/view" android:background="@color/shadow_color"
                android:layout_width="match_parent"
                android:layout_height="2dp" android:layout_marginTop="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView7"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </soup.neumorphism.NeumorphCardView>
</androidx.constraintlayout.widget.ConstraintLayout>