<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background_color"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/groupALayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:gravity="center"
                    android:paddingTop="10sp"
                    android:paddingBottom="10sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Group A"
                    android:fontFamily="@font/days_one"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2">
                    <soup.neumorphism.NeumorphCardView
                        android:id="@+id/aFirstTeamCardView"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <ImageView
                                android:id="@+id/homeImageViewId"
                                android:padding="5dp"
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:layout_marginTop="16dp"
                                android:src="@drawable/india"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"/>
                            <TextView
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="@color/text_color"
                                android:gravity="center"
                                android:id="@+id/homeTextViewId"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="16dp"
                                android:layout_marginBottom="32dp"
                                android:text="India"
                                android:fontFamily="sans-serif-medium"
                                android:layout_marginStart="8dp"
                                android:layout_marginEnd="8dp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/homeImageViewId"/>
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </soup.neumorphism.NeumorphCardView>
                    <soup.neumorphism.NeumorphCardView
                        android:id="@+id/aSecondTeamCardView"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <ImageView
                                android:id="@+id/secondImageViewId"
                                android:padding="5dp"
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:layout_marginTop="16dp"
                                android:src="@drawable/pakistan"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"/>
                            <TextView
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="@color/text_color"
                                android:gravity="center"
                                android:id="@+id/secondTeamName"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="16dp"
                                android:layout_marginBottom="32dp"
                                android:text="Pakistan"
                                android:fontFamily="sans-serif-medium"
                                android:layout_marginStart="8dp"
                                android:layout_marginEnd="8dp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/secondImageViewId"/>
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </soup.neumorphism.NeumorphCardView>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2">
                    <soup.neumorphism.NeumorphCardView
                        android:id="@+id/aThirdTeamCardView"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <ImageView android:id="@+id/thirdImageView"
                                android:padding="5dp"
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:layout_marginTop="16dp"
                                android:src="@drawable/hong_kong"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"/>
                            <TextView
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="@color/text_color"
                                android:gravity="center"
                                android:id="@+id/thirdTeamName"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="16dp"
                                android:layout_marginBottom="32dp"
                                android:text="Hong Kong"
                                android:fontFamily="sans-serif-medium"
                                android:layout_marginStart="8dp"
                                android:layout_marginEnd="8dp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/thirdImageView"/>
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </soup.neumorphism.NeumorphCardView>
                    <soup.neumorphism.NeumorphCardView
                        android:visibility="gone"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" android:layout_weight="1" app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent">
                        <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <ImageView android:id="@+id/fore" android:padding="5dp" android:layout_width="80dp"
                                android:layout_height="80dp" android:layout_marginTop="16dp" android:src="@drawable/ban" app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"/>
                            <TextView android:textSize="18sp" android:textStyle="bold" android:textColor="@color/text_color"
                                android:gravity="center" android:id="@+id/foreName" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="16dp" android:layout_marginBottom="32dp" android:text="Schedule" android:fontFamily="sans-serif-medium" android:layout_marginStart="8dp" android:layout_marginEnd="8dp" app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toBottomOf="@+id/fore"/>
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </soup.neumorphism.NeumorphCardView>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_below="@+id/groupALayout">
                <TextView android:textAppearance="@style/TextAppearance.AppCompat.Large" android:gravity="center" android:paddingTop="10sp" android:paddingBottom="10sp" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Group B" android:fontFamily="@font/days_one"/>
                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:weightSum="2">
                    <soup.neumorphism.NeumorphCardView android:id="@+id/bFirstTeamCardView" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent">
                        <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent" android:layout_height="match_parent">
                            <ImageView android:id="@+id/bFirstImageView" android:padding="5dp" android:layout_width="80dp" android:layout_height="80dp" android:layout_marginTop="16dp" android:src="@drawable/afghanistan" app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"/>
                            <TextView android:textSize="18sp" android:textStyle="bold" android:textColor="@color/text_color" android:gravity="center" android:id="@+id/bFirstTeamName" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="16dp" android:layout_marginBottom="32dp" android:text="Afghanistan" android:fontFamily="sans-serif-medium" android:layout_marginStart="8dp" android:layout_marginEnd="8dp" app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toBottomOf="@+id/bFirstImageView"/>
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </soup.neumorphism.NeumorphCardView>
                    <soup.neumorphism.NeumorphCardView android:id="@+id/bSecondTeamCardView" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent">
                        <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent" android:layout_height="match_parent">
                            <ImageView android:id="@+id/bSecondImageView" android:padding="5dp" android:layout_width="80dp" android:layout_height="80dp" android:layout_marginTop="16dp" android:src="@drawable/ban" app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"/>
                            <TextView android:textSize="18sp" android:textStyle="bold" android:textColor="@color/text_color" android:gravity="center" android:id="@+id/bSecondTeamName" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="16dp" android:layout_marginBottom="32dp" android:text="Bangladesh" android:fontFamily="sans-serif-medium" android:layout_marginStart="8dp" android:layout_marginEnd="8dp" app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toBottomOf="@+id/bSecondImageView"/>
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </soup.neumorphism.NeumorphCardView>
                </LinearLayout>
                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:weightSum="2">
                    <soup.neumorphism.NeumorphCardView android:id="@+id/bThirdTeamCardView" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent">
                        <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent" android:layout_height="match_parent">
                            <ImageView android:id="@+id/bThirdImageView" android:padding="5dp" android:layout_width="80dp" android:layout_height="80dp" android:layout_marginTop="16dp" android:src="@drawable/sri_lanka" app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"/>
                            <TextView android:textSize="18sp" android:textStyle="bold" android:textColor="@color/text_color" android:gravity="center" android:id="@+id/bThirdTeamName" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="16dp" android:layout_marginBottom="32dp" android:text="Sri Lanka" android:fontFamily="sans-serif-medium" android:layout_marginStart="8dp" android:layout_marginEnd="8dp" app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toBottomOf="@+id/bThirdImageView"/>
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </soup.neumorphism.NeumorphCardView>
                    <soup.neumorphism.NeumorphCardView android:visibility="gone" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent">
                        <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent" android:layout_height="match_parent">
                            <ImageView android:id="@+id/fore1" android:padding="5dp" android:layout_width="80dp" android:layout_height="80dp" android:layout_marginTop="16dp" android:src="@drawable/ban" app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"/>
                            <TextView android:textSize="18sp" android:textStyle="bold" android:textColor="@color/text_color" android:gravity="center" android:id="@+id/foreName1" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="16dp" android:layout_marginBottom="32dp" android:text="Schedule" android:fontFamily="sans-serif-medium" android:layout_marginStart="8dp" android:layout_marginEnd="8dp" app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toBottomOf="@+id/fore1"/>
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </soup.neumorphism.NeumorphCardView>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>